<h1>Datos de los estudiantes</h1>
<table border="1">
    <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Nota Final</th>
    </tr>
    {{#students}}
    <tr>
        <td>{{firstname}}</td>
        <td>{{lastname}}</td>
        <td>{{finalgrade}}</td>
    </tr>
    {{/students}}
</table>

<h1>Predicciones</h1>
<table border="1">
    <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Nota final</th>
        <th>Predicción</th>
    </tr>
    {{#students}}
    <tr>
        <td>{{firstname}}</td>
        <td>{{lastname}}</td>
        <td>{{finalgrade}}</td>
        <td>{{prediction}}</td> <!-- Usamos el índice calculado en PHP -->
    </tr>
    {{/students}}
</table>


